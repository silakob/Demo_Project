        <!-- Modal Sign In -->
        <div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Sign In</h5>
                        <button type="button" class="close" style="" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                        {
                            <div class="col-xl-12">
                                <div class="row">
                                    <div class="col-md-3 col-sm-12">

                                    </div>
                                    <div class="col-lg-6 col-md-12">
                                        <div class="form-group">
                                            @*@Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Email" } })*@
                                            @Html.Editor("LoginEmail", new { htmlAttributes = new { @class = "form-control", placeholder = "Email" } })
                                        </div>

                                        <div class="form-group">
                                            <div class="input-group">
                                                @*@Html.EditorFor(model => model.TextPassword, new { htmlAttributes = new { @class = "form-control pwd", placeholder = "Password", type = "password" } })*@
                                                @Html.Editor("LoginPassword", new { htmlAttributes = new { @class = "form-control pwd", placeholder = "Password", type = "password" } })
                                                <span class="input-group-btn">
                                                    <button class="btn reveal" type="button"><i class="glyphicon glyphicon-eye-open text-danger"></i></button>
                                                </span>
                                            </div>
                                        </div>

                                        <input class="btn btn-primary" style="float:right;" type="submit" value="LOGIN" />
                                    </div>
                                    <div class="col-md-3 col-sm-12">

                                    </div>
                                </div>
                            </div>
                        }

                        <hr />

                        @using (Html.BeginForm("Register", "Home", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <div class="col-xl-12">
                                <div class="row">
                                    <div class="col-md-3 col-sm-12">
                                        <h5>Register</h5>
                                    </div>
                                    <div class="col-lg-6 col-md-12">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        <div class="form-group">
                                            @Html.Editor("CustomerName", new { htmlAttributes = new { @class = "form-control", placeholder = "First Name" } })
                                            @Html.ValidationMessage("CustomerName", "", new { @class = "text-danger" })
                                        </div>

                                        <div class="form-group">
                                            @Html.Editor("CustomerSurname", new { htmlAttributes = new { @class = "form-control", placeholder = "Last Name" } })
                                            @Html.ValidationMessage("CustomerSurname", "", new { @class = "text-danger" })
                                        </div>

                                        <div class="form-group">
                                            @Html.Editor("Email", new { htmlAttributes = new { @class = "form-control", placeholder = "Email" } })
                                            @Html.ValidationMessage("Email", "", new { @class = "text-danger" })
                                        </div>

                                        <div class="form-group">
                                            <div class="input-group">
                                                @Html.Editor("TextPassword", new { htmlAttributes = new { @class = "form-control pwd", placeholder = "Password", type = "password" } })
                                                <span class="input-group-btn">
                                                    <button class="btn reveal" type="button"><i class="glyphicon glyphicon-eye-open text-danger"></i></button>
                                                </span>
                                            </div>
                                            @Html.ValidationMessage("TextPassword", "", new { @class = "text-danger" })
                                        </div>

                                        <div class="form-group">
                                            @Html.Editor("PhoneNo", new { htmlAttributes = new { @class = "form-control", placeholder = "Phone Number" } })
                                            @Html.ValidationMessage("PhoneNo", "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            @*@Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", rows = 4, placeholder = "Address" } })*@
                                            @Html.TextArea("Address", new { @class = "form-control", rows = 4, placeholder = "Address" })
                                            @Html.ValidationMessage("Address", "", new { @class = "text-danger" })
                                        </div>

                                        <input class="btn btn-primary" style="float:right;" type="submit" value="SUBMIT" />
                                    </div>
                                    <div class="col-md-3 col-sm-12">

                                    </div>
                                </div>
                            </div>
                        }


                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
